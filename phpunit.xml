<?xml version="1.0" encoding="UTF-8"?>
<phpunit colors="true">
	<filter>
		<whitelist processUncoveredFilesFromWhitelist="true">
			<directory suffix=".php">cms/</directory>
		</whitelist>
	</filter>
	<testsuites>
		<testsuite name="Unit Testing">
			<directory suffix="test.php">./tests/</directory>
		</testsuite>
	</testsuites>
</phpunit>
