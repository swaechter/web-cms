<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="./cms/website.php" colors="true">
	<filter>
		<whitelist>
			<directory>./cms/</directory>
		</whitelist>
	</filter>
	<testsuites>
		<testsuite name="Unit Testing">
			<directory suffix="test.php">./tests/</directory>
		</testsuite>
	</testsuites>
	<logging>
		<log type="coverage-html" target="./coverage"/>
	</logging>
</phpunit>
